<h1>{{section.settings.heading}}</h1>

{% for block in section.blocks %}
{% if block.type == "QA"%}
    <h4>{{block.settings.question}}</h4>
    <p>{{block.settings.answer}}</p>   
{% elsif block.type == "headline" %}
    <h3>{{block.settings.title}}</h3>
{% endif%}
{% endfor %}

{% schema %}
{
    "name":"customer questions",
    "settings":[
        {
            "type":"text",
            "label":"heading for faq",
            "id":"heading"
        }
    ],
    "blocks":[
        {
            "type": "QA",
            "name": "Question/Answer",
            "settings":[
                {
                    "type":"text",
                    "label":"Title (Internal Only)",
                    "id":"title"
                },
                {
                    "type":"text",
                    "label":"Customer questions",
                    "id":"question"
                },
                {
                    "type":"textarea",
                    "label":"Answer for FAQ",
                    "id":"answer"
                } 
            ]
        },
        {
            "type":"headline",
            "name":"headline",
            "settings":[
                {
                    "type":"text",
                    "label":"headline",
                    "id":"title"
                }
            ]
        }
    ]
    
}
{% endschema %}